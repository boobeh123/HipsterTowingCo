<% if (messages.errors) { %>
    <% messages.errors.forEach(function(el) { %>
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          M.toast({html: "<%= el.msg.replace(/"/g, '&quot;') %>", classes: 'red'});
        });
      </script>
    <% }) %>
  <% } %>
  <% if (messages.info) { %>
    <% messages.info.forEach(function(el) { %>
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          M.toast({html: "<%= el.msg.replace(/"/g, '&quot;') %>", classes: 'blue'});
        });
      </script>
    <% }) %>
  <% } %>
  <% if (messages.success) { %>
    <% messages.success.forEach(function(el) { %>
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          M.toast({html: "<%= el.msg.replace(/"/g, '&quot;') %>", classes: 'green'});
        });
      </script>
    <% }) %>
  <% } %>