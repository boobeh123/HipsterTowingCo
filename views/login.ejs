<%- include('./partials/header.ejs') %>
    <main class="login-main">
        <div class="container firstArea">
            <section class="container">
                <h3>Inspections Reimagined</h3>
                <p>Welcome to pretriq</p>
                <a href="/">Back to Home Page ></a>
            </section>
        </div>
        <div class="container secondArea">
            <div class="container">
                <div class="card col hoverable">
                    <%- include('./partials/flash.ejs') %>
                    <div class="card-content">
                        <h4 class="center-align">Log in to your account</h4>
                        <form action="/login" method="POST">
                            <input type="email" name="email" placeholder="Email*" autofocus required autocomplete='email'>
                            <input type="password" name="password" placeholder="Password*" required autocomplete='current-password'>
                            <button type="submit" class="btn waves-effect waves-light green lighten-1 hoverable">Submit</button>
                            <p class="center-align">Need an account? <a href='/signup'>Sign Up</a></p>
                            <a class="center-align forgot marginT" href='/forgot'>Forgot Password?</a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </main>
<%- include('./partials/footer.ejs') %>